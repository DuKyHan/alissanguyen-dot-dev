// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model Post {
  id              String        @id @default(uuid())
  thumbnailImage  String        @default("https://st4.depositphotos.com/14953852/22772/v/380/depositphotos_227725200-stock-illustration-image-available-icon-flat-vector.jpg?forcejpeg=true")
  excerpt         String?       
  title           String    
  body            String
  topics          String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
}

model Like {
  id              String        @id @default("likes-count")
  count           Int        
}
